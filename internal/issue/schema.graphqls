# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Issue {
  _id: ID!
  createdAt: Time
  updatedAt: Time
  title: String!
  code: String!
  description: String!
  completed: Boolean!
}

type Query {
  issues: [Issue!]!
}

input NewIssue {
  createdAt: Time
  updatedAt: Time
  title: String!
  code: String!
  description: String!
  completed: Boolean!
}

type Mutation {
  createIssue(input: NewIssue!): Issue!
}

scalar Time